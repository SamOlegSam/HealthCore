</div>
<style type="text/css">
    
    TH.tab {
        background: #EFF5FB; /* Цвет фона */
        border-bottom: double;
    }

    tr.tab:nth-child(odd) {
        background: #EFF5FB; /* Цвет фона */
    }

    tr.tab:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
</style>

<p>
        <button type="button" class="btn btn-outline-secondary" onclick="AddLoginPassword()">Добавить пользователя</button>
   </p>     
                      
    
<table class="table table-striped">
    <tr>
        <th>
            Login
        </th>

        <th>
            Password
        </th>

        <th>
            Пользователь
        </th>
        <th>
            Филиал
        </th>
        <th>
            Созд./Изм.
        </th>
        <th>
            Дата
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Password)
    </td>
        
    <td>
        @*@Html.DisplayFor(modelItem => item.Employee.FirstName)*@
        @if(item.EmployeeId != null)
                {
                    @item.Employee.FirstName @item.Employee.LastName @item.Employee.MiddleName
                }
                else
                {
                    
                }
                 
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Employee.Filial.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UserModif)
    </td>
    <td>
        @if (item.DateMod != null)
        {
            @Convert.ToDateTime(item.DateMod).ToString("d")
        }
        else
        {

        }
    </td>
