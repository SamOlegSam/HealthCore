@model HealthCore.Models.Child

<div class="modal-header" style="text-align: center;background-color: #d4d7d9; border-radius:5px;">
    <h5> Добавление родственника</h5>
</div>
<div class="modal-body">
    <input type="hidden" class="form-control btn-block" id="UserModif" value="@User.Identity?.Name"/>
        
    <label>ФИО</label>
    <input type="text" class="form-control btn-block" id="FIO" />             
     
    <label>Сотрудник</label>
    <select class="form-select" contenteditable="true" id="EmployeeID">
                   <option value="0" selected >Выберите родственника</option>
                    @foreach (var fil in ViewBag.listemployee)
                    {                       
                            <option value="@fil.Id"> @fil.FirstName @fil.LastName @fil.MiddleName </option>
                       
                    }
                                       
    </select>

    <label>Степень родства</label>
    <select class="form-select" contenteditable="true" id="StatusID">
                   <option value="0" selected >Выберите степень родства</option>
                    @foreach (var fil in ViewBag.liststatus)
                    {                       
                            <option value="@fil.Id"> @fil.Name</option>
                       
                    }
                                       
    </select>
           
    <label>Дата рождения</label>
    <input type="date" class="form-control btn-block" id="BirthDay" />

    <label>Пол</label>
    <select class="form-select" contenteditable="true" id="Pol">
   <option value="0" selected >Выберите пол</option>                
  <option value="муж.">муж.</option>
  <option value="жен.">жен.</option>
  <option value="ср.">ср.</option>
                                                          
    </select>
                                
</div>
<center>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-outline-primary" style="min-width:100px" onclick="ChildSave(0)">Сохранить</button>
    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px" >Отмена</button>
    
</div>
</center>



