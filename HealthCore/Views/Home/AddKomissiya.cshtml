@model HealthCore.Models.Komissiya

<div class="modal-header" style="text-align: center;background-color: #d4d7d9; border-radius:5px;">
    <h5> Добавление члена комиссии</h5>
</div>
<div class="modal-body">
    <input type="hidden" class="form-control btn-block" id="UserModif" value="@User.Identity?.Name"/>
        
    <label>Назначение</label>
    <select class="form-select" contenteditable="true" id="status">
                   <option value="-1" selected >Выберите назначение</option>
                    @foreach (var naz in ViewBag.Listnazn)
                    {                       
                            <option value="@naz.Id"> @naz.Name </option>                       
                    }
               </select>
        
    <label>Сотрудник</label>
    <select class="form-select" contenteditable="true" id="Empl">
                   <option value="-1" selected >Выберите сотрудника</option>
                    @foreach (var fil in ViewBag.listempl)
                    {                       
                            <option value="@fil.Id"> @fil.FirstName @fil.LastName @fil.MiddleName </option>                       
                    }
                                       
                </select>
                                                                
</div>
<center>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-outline-primary" style="min-width:100px" onclick="KomissiyaSave(0)">Сохранить</button>
    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px" >Отмена</button>
    
</div>
</center>



