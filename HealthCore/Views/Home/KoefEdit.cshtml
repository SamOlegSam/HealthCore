@model HealthCore.Models.Koef

<div class="modal-header" style="text-align: center; background-color: #d4d7d9; border-radius:5px;">
    <h5><b> Редактирование коэффициента</b></h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="IDEdit" value="@Model.Id" />
    <input type="hidden" class="form-control btn-block" id="UserModif" value="@User.Identity?.Name"/>

    <label>Наименование</label>
    <input type="text" class="form-control btn-block" id="NameEdit" value="@Model.Name"/>   
    
    <label>Дата начала действия</label>
   <input type="date" class="form-control" id="DateStartEdit">
           
            <script>

                    var str = "@Model.DateStart";
                    
                    var day = str.substr(0, 2);
                    
                    var month = str.substr(3, 2);
                    
                    var year = str.substr(6, 4);
                    
                    var strDate = year + "-" + month + "-" + day
                    
                    document.getElementById("DateStartEdit").value = strDate;

                </script>

    <label>Значение</label>
    <input type="text" class="form-control btn-block" id="ValueEdit" onkeyup="this.value = this.value.replace(/[A-Za-zА-Яа-яЁё]/, '');" value="@Model.Value"/> 

    <label>Контролируемая величина (в БВ)</label>
    <input type="text" class="form-control btn-block" id="ControlEdit" onkeyup="this.value = this.value.replace(/[A-Za-zА-Яа-яЁё]/, '');" value="@Model.Control"/> 

    <label>Величина для предупреждения (в БВ)</label>
    <input type="text" class="form-control btn-block" id="PreduprejdenieEdit" onkeyup="this.value = this.value.replace(/[A-Za-zА-Яа-яЁё]/, '');" value="@Model.Preduptejdenie"/> 

    <label>Примечание</label>
    <input type="text" class="form-control btn-block" id="PrimechEdit" value="@Model.Primech"/> 
    
</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-outline-secondary" style="min-width:100px" onclick="KoefEditSave(0)">Сохранить</button>
    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px">Отмена</button>
</div>







