@model HealthCore.Models.Protocol

<div class="modal-header" style="text-align: center; background-color: #d4d7d9; border-radius:5px;">
    <h5><b> Редактирование протокола</b></h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="IDEdit" value="@Model.Id" />

    <label>Номер</label>
    <input type="text" class="form-control btn-block" id="NumberEdit" value="@Model.NumberP" />
    
     <label>Дата протокола</label>
    <input type="date" class="form-control btn-block" id="DatePEdit"/>

    <script>

                    var str = "@Model.DateProt";
                    console.log(str);

                    var day = str.substr(0, 2);
                    console.log(day);

                    var month = str.substr(3, 2);
                    console.log(month);

                    var year = str.substr(6, 4);
                    console.log(year);

                    var strDate = year + "-" + month + "-" + day
                    console.log(strDate);


                    document.getElementById("DatePEdit").value = strDate;

                </script>
       
         
    <input type="hidden" class="form-control btn-block" id="UserModifEdit" value="@User.Identity?.Name" />
    
</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-outline-primary" style="min-width:100px" onclick="ProtocolEditSave(0)">Сохранить</button>
    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px">Отмена</button>
</div>







