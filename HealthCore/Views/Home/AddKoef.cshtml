@model HealthCore.Models.Koef

<div class="modal-header" style="text-align: center;background-color: #d4d7d9; border-radius:5px;">
    <h5> Добавление коэффициента</h5>
</div>
<div class="modal-body">
    <input type="hidden" class="form-control btn-block" id="UserModif" value="@User.Identity?.Name"/>
        
    <label>Наименование</label>
    <input type="text" class="form-control btn-block" id="Name" />   
    
    <label>Дата начала действия</label>
   <input type="date" class="form-control" id="DateStart">
            <script>        
                    var d = new Date();
                            var day = d.getDate(); if (day < 10) day = '0' + day;
                            var month = d.getMonth() + 1; if (month < 10) month = '0' + month;
                            var year = d.getFullYear();
                            document.getElementById("DateStart").value = year + "-" + month + "-" + day;
                    
    </script>

    <label>Значение</label>
    <input type="text" class="form-control btn-block" id="Value" onkeyup="this.value = this.value.replace(/[A-Za-zА-Яа-яЁё]/, '');"/> 

    <label>Контролируемая величина (в БВ)</label>
    <input type="text" class="form-control btn-block" id="Control" onkeyup="this.value = this.value.replace(/[A-Za-zА-Яа-яЁё]/, '');"/> 

    <label>Величина для предупреждения (в БВ)</label>
    <input type="text" class="form-control btn-block" id="Preduprejdenie" onkeyup="this.value = this.value.replace(/[A-Za-zА-Яа-яЁё]/, '');"/> 

    <label>Примечание</label>
    <input type="text" class="form-control btn-block" id="Primech" /> 
                                    
</div>
<center>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-outline-primary" style="min-width:100px" onclick="KoefSave(0)">Сохранить</button>
    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px" >Отмена</button>
    
</div>
</center>



