@model HealthCore.Models.Sanatorium

<div class="modal-header" style="text-align: center; background-color: #d4d7d9; border-radius:5px;">
    <h5><b> Редактирование контрагента</b></h5>
</div>
<div class="modal-body">

    @*<label>ID записи</label>*@
    <input type="hidden" class="form-control btn-block" id="IDEdit" value="@Model.Id" />       
    
    <label>Тип контрагента</label>
    <select class="form-select" contenteditable="true" id="KontrEdit">
                   @if(Model.Priznak == "Санаторий")
        {
                   <option value="Санаторий" selected >Санаторий</option>
                   <option value="ТурОператор"  >ТурОператор</option>  
                   <option value="Санаторий и ТурОператор" >Санаторий и ТурОператор</option>
        }
        else if(Model.Priznak == "ТурОператор")
        {
                   <option value="Санаторий">Санаторий</option>
                   <option value="ТурОператор" selected >ТурОператор</option>
                   <option value="Санаторий и ТурОператор" >Санаторий и ТурОператор</option>
        }
        
        else
        {
                   <option value="Санаторий">Санаторий</option>
                   <option value="ТурОператор">ТурОператор</option> 
                   <option value="Санаторий и ТурОператор" selected >Санаторий и ТурОператор</option>
        }
                                                           
    </select>

<label>Название</label>
    <input type="text" class="form-control btn-block" id="SanatoriumEdit" value="@Model.Name"/>
    <label>Город</label>
    <select class="form-select" contenteditable="true" id="idUSEdit">

        @foreach (var dol in ViewBag.listcountry)
        {
            if (dol.Id == @Model.CityId)
            {
                <option value="@dol.Id" selected> @dol.Name </option>
            }
            else
            {
                <option value="@dol.Id"> @dol.Name</option>
            }
        }
    </select>
    <label>Юридический адрес</label>
    <input type="text" class="form-control btn-block" id="AddressEdit" value="@Model.Address"/>

     <label>Почтовый адрес</label>
    <input type="text" class="form-control btn-block" id="PostAddressEdit" value="@Model.PostAddress"/>

    <label>УНП</label>
    <input type="text" class="form-control btn-block" id="UNPEdit" value="@Model.Unp"/>

    <label>Банк</label>
    <select class="form-select" contenteditable="true" id="BankIDEdit">
                  
                   @foreach (var dol in ViewBag.listbank)
        {
            if (dol.Id == @Model.BankId)
            {
                <option value="@dol.Id" selected> @dol.Name </option>
            }
            else
            {
                <option value="@dol.Id"> @dol.Name</option>
            }
        }                                    
    </select>

    <label>Рассчетный счет</label>
    <input type="text" class="form-control btn-block" id="RSEdit" value="@Model.SanatInd"/>
    
    <input type="hidden" class="form-control btn-block" id="UserModifEdit" value="@User.Identity?.Name" />
    
</div>
<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-outline-primary" style="min-width:100px" onclick="SanatoriumEditSave(0)">Сохранить</button>
    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal" style="min-width:100px">Отмена</button>
</div>







