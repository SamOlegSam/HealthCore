@model HealthCore.Models.VMLogin;
@{
    Layout = null;
}

<html>
 <head>
   <meta charset="UTF-8">
 </head>
 
 <style>

body {
         display: flex;
         justify-content: center;
         align-items: center;
         height: 100vh;
 }
 
 </style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body style="background-image: url(/Images/fon/bg25.png); background-repeat: round;">
    <div class="container" style="border:solid; border-color:grey; border-radius:5px; padding:5px; background-color:#F6F8F9;">
    <form asp-controller="Access" asp-action="Login" method="post">
        <center><h1>Вход в систему</h1></center>
        <input type="text" placeholder="Имя пользователя" required asp-for="Login"/>
        <input type="password" placeholder="Password" required asp-for="PassWord"/>
                
        <button type="submit">Войти</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <center><label>@ViewData["ValidateMessage"]</label></center>
        }

    </form>
    </div>
</body>

<style>
body {font-family: Arial, Helvetica, sans-serif;}

/* Full-width input fields */
input[type=text], input[type=password] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
}

/* Set a style for all buttons */
button {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
}


</style>
